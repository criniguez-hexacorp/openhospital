<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data noupdate="1">

    <!-- Sequences for openhospital.patient -->
    <record id="seq_openhospital_patient" model="ir.sequence">
      <field name="name">Patients Sequence</field>
      <field name="code">openhospital.patient</field>
      <field name="prefix">HP</field>
      <field name="padding">5</field>
      <field name="company_id" eval="False" />
    </record>

    <!-- Sequences for openhospital.appointment -->
    <record id="seq_openhospital_appointment" model="ir.sequence">
      <field name="name">Appointments Sequence</field>
      <field name="code">openhospital.appointment</field>
      <field name="prefix">HA</field>
      <field name="padding">5</field>
      <field name="company_id" eval="False" />
    </record>

  </data>
</odoo>