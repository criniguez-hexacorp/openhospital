<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- form view -->
  <record id="openhospital_patient_view_form" model="ir.ui.view">
    <field name="name">openhospital.patient.view.form</field>
    <field name="model">openhospital.patient</field>
    <field name="arch" type="xml">
      <form string="Patients Form">
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name_seq" readonly="1" />
            </h1>
          </div>
          <group>
            <group>
              <field name="name" />
              <field name="age" />
              <field name="gender" />
            </group>
            <group>
              <field name="age_group" />
            </group>
          </group>
          <group>
            <field name="notes" />
            <field name="image" />
          </group>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers" />
          <field name="activity_ids" widget="mail_activity" />
          <field name="message_ids" widget="mail_thread" />
        </div>
      </form>
    </field>
  </record>

  <!-- tree view -->
  <record id="openhospital_patient_view_tree" model="ir.ui.view">
    <field name="name">openhospital.patient.view.tree</field>
    <field name="model">openhospital.patient</field>
    <field name="arch" type="xml">
      <tree string="Patients">
        <field name="name_seq" />
        <field name="name" />
        <field name="age" />
        <field name="age_group" />
        <field name="gender" />
        <field name="notes" />
      </tree>
    </field>
  </record>

  <!-- search view -->
  <record id="openhospital_patient_view_search" model="ir.ui.view">
    <field name="name">openhospital.patient.view.search</field>
    <field name="model">openhospital.patient</field>
    <field name="arch" type="xml">
      <search string="Search Patients">
        <field name="name" filter_domain="['|', ('name', 'ilike', self), ('name_seq', 'ilike', self)]" />
        <field name="name_seq" />
        <field name="name" />
        <separator />
        <filter string="Male" name="male" domain="[('gender', '=', 'male')]" />
        <filter string="Female" name="female" domain="[('gender', '=', 'female')]" />
        <group expand="0" string="Group By">
          <filter string="Gender" name="gender" context="{'group_by': 'gender'}" />
        </group>
      </search>
    </field>
  </record>

  <!-- action -->
  <record id="openhospital_patient_action" model="ir.actions.act_window">
    <field name="name">Patients</field>
    <field name="res_model">openhospital.patient</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">Create your First Patient!</p>
    </field>
  </record>

</odoo>
